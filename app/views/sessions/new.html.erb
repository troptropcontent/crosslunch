<div class="grow flex flex-col gap-4">
  <div>
    <h1 class="font-bold text-4xl text-center"><%= t('sessions.new.title') %></h1>
  </div>
  <%= form_with url: "/login", method: :post do |form| %>
    <div class="flex flex-col gap-4">
      <%= form.fields_for :session  do |session_form| %>      
        <div>
          <%= session_form.label :first_name, t('sessions.new.form.first_name.label') %>
          <%= session_form.text_field :first_name, placeholder: t('sessions.new.form.first_name.placeholder'), class:'w-full' %>
        </div>
        <div>
          <%= session_form.label :last_name, t('sessions.new.form.last_name.label') %>
          <%= session_form.text_field :last_name, placeholder: t('sessions.new.form.last_name.placeholder'), class:'w-full' %>
        </div>
      <% end %>
      <%= form.submit t('sessions.new.form.submit.text'), class: "bg-sky-500 p-4 rounded-md w-full text-white font-bold" %>
    </div>
  <% end %>
</div>
