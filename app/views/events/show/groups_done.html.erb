<div class="p-8 grow flex flex-col items-center justify-center gap-4">
    <div class="grow flex flex-col gap-8 justify-between">
        <div class="header">
            <h1 class="font-bold text-xl text-center"><%= t('events.views.groups_done.title') %></h1>
            <h1 class="text-l text-center"><%= t('events.views.groups_done.sub_title') %></h1>
        </div>
        <ul class='participants grow'>
            <% @other_participants.each do |participant| %>
                <li><%=  full_name(participant) %></li>
            <% end %>
        </ul>
        <%= link_to "Chat", channel_path(@channel), class: 'bg-sky-800 text-center py-4 text-white rounded-md font-bold' %>
    </div>
</div>